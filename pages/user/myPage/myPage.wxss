page {
    background: #eee;
    margin: 0 20rpx;
}
.itemBox{
    margin-bottom: 20rpx;
}
.itemBox .item{
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #aaa;
}
.title {
    display: inline-block;
    height: 50rpx;
    padding: 20rpx;
    border-bottom: 5rpx solid #81C995;
    margin-bottom: 20rpx;
}
.content{
    display: flex;
    margin-bottom: 15rpx;
}
.content .name{
    font-weight: bold;
    margin-right: 20rpx;
    color: #000;
}
.content .desc{
    font-weight: bold;
    color: #aaa;
}
.footBox{
    white-space: nowrap;
    font-size: 20rpx;
    color: #aaa;
    position: absolute;
    top: 90%;
    left: 50%;
    transform: translateX(-50%);
    
}